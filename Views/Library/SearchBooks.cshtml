@model IEnumerable<LibrarySystems.Models.Book>

<h2>Search Books</h2>

<form asp-action="SearchBooks" method="get">
    <div class="form-group">
        <input type="text" name="searchString" class="form-control" placeholder="Enter title or author" />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

@if (Model != null && Model.Any())
{
    <h3>Search Results</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>ISBN</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@book.ISBN</td>
                </tr>
            }
        </tbody>
    </table>
}
